rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow unauthenticated users to create account requests
    match /accountRequests/{document} {
      allow create: if true;
      allow read, update, delete: if request.auth != null &&
        exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    // User collection security
    match /users/{userId} {
      // Users can read their own data
      allow read: if request.auth != null && request.auth.uid == resource.data.uid;

      // Admins can read/write all user data
      allow read, write: if request.auth != null &&
        exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    // Allow authenticated users to read/write other collections
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}